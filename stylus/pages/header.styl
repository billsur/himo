header
	background white
	position fixed
	width 100%
	top 0
	left 0
	z-index 2
	box-shadow 0 10px 20px rgba(black, .1)
	.container
		display flex
		justify-content space-between
		align-items center
		padding 15px 20px
.header__logo
	width 250px
.header__action
	background red
	padding 10px 20px
	border-radius 5px
	color white
	display flex
	align-items center
	text-transform uppercase
	font-weight bold
	box-shadow 1px 6px 10px rgba(black, .2)
	span
		margin-left 10px

+break(tablet)
	header
		.container
			padding 10px 15px
	.header__logo
		width 200px


