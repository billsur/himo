.home
	background #012
	color white
.slide__title
	font bold 100px/100px $font
	position absolute
	width 100%
	height 100%
	top 0
	display flex
	justify-content center
	align-items center
.slide
	text-align center
	position relative
	background #012 url("/img/bg.jpg") center / cover no-repeat
	height 800px
	display flex
	align-items center
	img
		width 800px
		margin auto
.home__adv
	.container
		background #012 url('/img/bg-cycling.png') top no-repeat
		padding 10px 80px
		color white
		height 865px
	.home__adv__title
		font bold 60px/70px $font
		color white
	p
		font normal 18px/32px $font
		color rgba(white, .8)
	.home__adv__big
		font 500 26px/42px $font
		color white
		margin 0
		
.home__adv__feature__title
	font bold 36px/48px $font
.home__adv__row
	display flex
.home__adv__col
	flex 1
	&:nth-child(2)
		margin-left 50px
.home__perf
	.container
		height 700px
		display flex
		align-items center
		justify-content center
		text-align center
.home__perf__header
	position relative
	z-index 2
.saddle
	width 414px
	position absolute
	top 0
	left 20px
.battery
	width 378px
	position absolute
	top 100px
	right 0
.gear
	width 407px
	position absolute
	bottom 0
	left 90px
.home__perf__subtitle
	font bold 30px/40px $font
	color white
.home__perf__title
	font bold 70px/75px $font
	color magenta
.home__spec
	.container
		display flex
		justify-content space-around
		text-align center
		margin 30px auto
.home__spec__col
	p
		font 24px/30px $font
		color white
		margin 0
.home__spec__title
	font bold 60px/80px $font
	color $orange
.home__paragraph
	margin 100px 0
	p
		font 500 30px/50px $font
		color white
		width 900px
		margin 20px auto
	aside
		font 16px/24px $font
		color rgba(white, .4)
.home__rev
	h2
		font bold 50px/60px $font
		color $orange
	.container
		display flex
		align-items center
.home__rev__widget
	flex 1
	text-align center
	.mi
		color $orange
		font-size 48px
	p
		font bold 22px/30px $font
		color white
.home__rev__p
	font 16px/30px $font
	color rgba(white, .6)
.home__rev__name
	font bold 22px/30px $font
	color white
	text-align center
	width 100%
.home__rev__col
	flex 1
	background rgba(#002c58,.5)
	margin-left 30px
	padding 80px 40px 50px 40px
	height 540px
	display flex
	flex-flow column wrap
	position relative
	overflow hidden
	&:after
		position absolute
		background white
		width 100%
		top -70px
		left 0
		background #012
		content ''
		height 100px
		transform skewY(7deg)
	.home__rev__star
		text-align center
		margin-top auto
		.mi
			margin 0 5px
			color $orange
.home__rev__title
	color $orange
	font bold 75px/90px $font
.home__choices
	margin-top 100px
	.container
		display flex
	h2
		font bold 50px/60px $font
		color $orange
.home__choice
	flex 1
	&:not(:nth-child(1))
		margin-left 40px
	.home__choice__title
		font bold 40px/40px $font
		color white
		margin 15px 0
	p
		font 16px/30px $font
		margin-top 30px
		color rgba(white, .8)
.home__choice__num
	font bold 16px/20px $font
	color white
	margin-top -90px
	display flex
	align-items center
	&:before
		content ''
		width 20px
		height 1px
		background white
		margin 0 20px 0 -15px
.home__warranty
	margin 100px 0 0
	.container
		display flex
		align-items center
.home__warranty__col
	color white
	&:nth-child(2)
		margin-left 70px
	img
		width 640px
.home__warranty__head
	font 20px/35px $font
	margin-bottom 30px
.home__warranty__header
	font 30px/50px $font
.home__warranty__title
	font bold 50px/70px $font
	color $orange
.home__service
	margin-top 30px
	p
		color rgba(white, .6)
	.link
		color $blue
.home__q
	background #001835
	color white
	.container
		display flex
		padding 50px 0
.home__q__content
	display flex
	margin-left auto
	flex-grow 1
	justify-content space-around
.home__q__col
	display flex
	align-items center
	margin-left 50px
.home__q__title
	font bold 30px/45px $font
.home__q__icon
	line-height 0
	.mi
		color $orange
.home__q__list
	font 500 24px/24px $font
	margin-left 10px
	color white
.home__service__title
	font 500 20px/28px $font

.home__r
	margin 80px 0
	.home__r__title
		color white
	img
		width 380px
		margin-right 30px
.home__seo
	h2
		font 500 28px/40px $font
		color white
		margin-top 50px
	p
		font 16px/28px $font
		color rgba(white, .5)

.home__copy
	padding 50px 0
	color white

+break(tablet)
	.slide
		height 600px
		img
			width 600px
	.slide__title
		font bold 60px/60px $font
	.home__adv
		padding 0 20px
		.container
			padding 10px 30px
		.home__adv__title
			font bold 40px/60px $font
		.home__adv__big
			font 500 18px/32px $font
		p
			margin 5px 0
	.home__adv__row
		display block
	.home__adv__col
		&:nth-child(2)
			margin-left 0
	.home__adv__feature__title
		font bold 24px/36px $font
		margin-top 20px
	.saddle
		width 207px
	.battery
		width 189px
	.gear
		width 204px
	.home__perf
		.container
			height 500px
	.home__perf__title
		font bold 50px/60px $font
	.home__perf__subtitle
		font bold 24px/36px $font
	.home__spec__title
		font bold 36px/42px $font
	.home__spec__col
		p
			font 18px/24px $font
	.home__paragraph
		padding 0 100px
		p
			width 100%
			font 500 24px/38px $font
	.home__rev
		h2
			font bold 36px/40px $font
		.container
			padding 0 20px
			overflow auto
			max-width none
			width auto
	.home__rev__col
		padding 60px 20px 30px
	.home__rev__title
		font bold 48px/70px $font
	.home__rev__widget
		width 300px
		flex-shrink 0
		flex none
		.mi
			font-size 30px
		p
			font 500 18px/24px $font
	.home__rev__col
		width 300px
		flex-shrink 0
		flex none
	.home__choices
		h2
			font bold 36px/40px $font
		.container
			padding 0 20px
			overflow auto
	.home__choice
		width 280px
		flex none
		flex-shrink 0
		&:not(:nth-child(1))
			margin-left 30px
		.home__choice__title
			font bold 30px/40px $font
		p
			margin-top 10px
			font 14px/24px $font
	.home__choice__num
		margin-top -50px
	.home__warranty
		.container
			padding 0 20px
	.home__warranty__col
		img
			display none
		&:nth-child(2)
			margin 0 0 40px 0
	.home__q
		.container
			display block
			padding 20px
	.home__q__content
		justify-content flex-start
	.home__q__col
		margin 20px 40px 20px 0
	.home__r
		.container
			padding 0 20px
		img
			width 200px
	.home__seo
		.container
			padding 0 20px
		h2
			font 500 22px/30px $font


+break(mobile)
	.home__adv
		padding 0
		.home__adv__title
			font bold 30px/40px $font
	.home__adv__col
		p
			font 14px/22px $font
	.home__perf__title
		font bold 42px/50px $font
	.home__perf__subtitle
		font 500 20px/30px $font
	.home__spec__title
		font bold 24px/32px $font
	.home__spec__col
		width 100px
		p
			font 500 14px/20px $font
	.home__paragraph
		padding 0 40px
		p
			font 500 20px/34px $font
	.home__rev
		h2
			font bold 24px/34px $font
	.home__q__content
		display block
	.home__q__header
		margin-bottom 20px
	.home__q__list
		font 500 20px/25px $font
	.home__r
		margin 30px 0
		img
			margin-bottom 10px
	.home__choices
		margin-top 40px
		h2
			font bold 24px/34px $font
	.home__choice
		.home__choice__title
			font bold 24px/30px $font




